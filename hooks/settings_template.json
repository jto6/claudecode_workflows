{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ”§ Executing: $TOOL_INPUT' | head -c 100"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command", 
            "command": "echo 'ðŸ“ Processing request in: $CLAUDE_PROJECT_DIR'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… File modified - consider running tests'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "paplay /usr/share/sounds/gnome/default/alerts/swing.ogg 2>&1 || afplay /System/Library/Sounds/Glass.aiff 2>&1 || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "paplay /usr/share/sounds/gnome/default/alerts/string.ogg 2>&1 || afplay /System/Library/Sounds/Glass.aiff 2>&1 || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allowlist": [
      "Read",
      "Write", 
      "Edit",
      "MultiEdit",
      "Bash",
      "Glob",
      "Grep",
      "LS",
      "TodoWrite",
      "Task",
      "WebFetch",
      "WebSearch"
    ]
  }
}
